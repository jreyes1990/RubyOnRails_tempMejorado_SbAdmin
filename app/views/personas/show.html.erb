<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Perfil de Usuario</h6>
  </div>
  <div class="card-body">
    <form class="container-fluid">

      <div class="row gutters-sm">

        <div class="col-md-4 mb-3">
          <div class="card">

            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <br>
                <br>
                <br>
                <img src="<%= @persona.foto.url%>" alt="Admin" class="rounded-circle" width="150" height="150">
                <div class="mt-3">
                  <br>
                  <h4><%= @persona.nombre_completo %></h4>
                  <p class="text-secondary mb-1">Tel. <%= @persona.telefono %></p>
                  <hr>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-8 mb-3">
          <div class="card">
            <div class="card-body">

              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Empresa</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @empresa.nombre %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Areas</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @nombresAreas %>

                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Username</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @persona.user.email %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Dirección</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @persona.direccion %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Fecha de Registro</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @persona.created_at.strftime('%d/%m/%Y %H:%M:%S')   %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Ultima actualización</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @persona.updated_at.strftime('%d/%m/%Y %H:%M:%S')   %>
                </div>
              </div>


            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12 text-right">

              <div class="d-grid gap-2 d-md-block">
                <br />

                <%= link_to modal_cambiar_contrasena_path(:persona_id => @persona.id), {:remote => true, 'data-toggle' =>  "modal",'data-target' => '#modal-content-cambio-contrasena', class: "btn btn-success btn-sm"} do %>
                <span class="icon text-50">
                  <i class="fas fa-key"></i>
                </span>
                  <span class="text">CAMBIAR CONTRASEÑA</span>
                <%end%>

                <%= link_to edit_persona_path(@persona), class: "btn btn-success btn-sm" do %>
                <span class="icon text-50">
                  <i class="fas fa-edit"></i>
                </span>
                  <span class="text">EDITAR</span>
                <%end%>

                <%= link_to root_path, class: "btn btn-outline-danger btn-sm" do %>
                <span class="icon text-red-50">
                  <i class="fas fa-home"></i>
                </span>
                  <span class="text">INICIO</span>
                <%end%>
              </div>

            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<div id="modal-content-cambio-contrasena" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true"></div>
<br>
<br>